<% if (items.length) { %>
    <ul>
      <% } %>
  
        <% items.forEach(function(item){ %>
          <li id="<%= item.id %>">
            <div class="head">
              <a href="/users/<%= item.userId.login %>">
                <%= item.userId.login %>
              </a>
              <spam class="date">
                <%= moment(item.createdAt).fromNow(); %>
              </spam>
            </div>
            <%= item.body %>
              <span class="link" id="reply">ответить</span>
              <%- include('./comments.ejs', {items: item.children}) %>
          </li>
          <% }) %>
  
            <% if (items.length) { %>
    </ul>
    <% } %>